<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="background-color: rgba(48,48,48,.9); margin: 0 auto">
        <div class="container" style="background-color: rgba(48,48,48,.9); margin: 0 auto">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                	<% if user_signed_in? %> 
                    <li>
                        <%= link_to 'Snacktivist', user_path(current_user), :class => 'navbar-brand'%>
                    </li>
                	<li>
                        <%= link_to 'Snackers', friendships_path %>
                    </li>  
                    <li>
                        <%= link_to 'Parties', user_parties_path(current_user) %>
                    </li>  
                    <li>
                        <%= link_to 'Snack Preferences', edit_user_path(current_user) %>
                    </li>
                    <li>
                        <%= link_to 'Settings', edit_user_registration_path, :class => 'navbar-link' %>
                    </li>
                    
                    <li>
                        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'%>
                    </li>
                    <% else %>   
                    <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |   <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %> 
                    <% end %>
                    
                    <% if user_signed_in? %>
                    <li>
                     <%= form_tag user_show_search_path(current_user), method: :get do %>
                     
                        <%= text_field_tag :query, @query, placeholder: 'Find a snack', style:"color: black;; margin: 13px 5px 0px 0" %>
                        <%= submit_tag "Search", style:"background-color: rgba(196, 216, 226, 1); border-radius: 10px; color: black" %>

                    <% end %>
                    </li>
                    <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>


        


</body>

